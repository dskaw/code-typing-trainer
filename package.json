    "autoprefixer": "^10.4.23",
    "chardet": "^2.1.1",
    "iconv-lite": "^0.7.1",
    "monaco-editor": "^0.55.1",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.6.0",
    "tailwindcss": "^4.1.18"
